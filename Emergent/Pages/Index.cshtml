@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="input-group">
                            <form method="post" autocomplete="off">
                                <input type="text" name="Major" placeholder="Major" size="5" onkeypress="return isNumberKey(event)" />
                                <input type="text" name="Minor" placeholder="Minor" size="5" onkeypress="return isNumberKey(event)" />
                                <input type="text" name="Patch" placeholder="Patch" size="5" onkeypress="return isNumberKey(event)" />
                                <button type="submit">Search</button>
                            </form>
                            &nbsp;<span class="mt-1"><a href=".">Reset</a></span>
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-12">
                        @if (string.IsNullOrWhiteSpace(Model.CurrentFilterString))
                        {
                            <text>No Filter</text>
                        }
                        else
                        {
                            <text>Current Filter: @Model.CurrentFilterString</text>
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>

    <br />
    <br />
    @foreach (var software in Model.SoftwareList)
    {
        <div class="row">
            <div class="col-md-6">
                <div class="card card-body">
                    <div class="row">
                        <div class="col-md-6">
                            @software.Name
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            @software.VersionString
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script type="text/javascript">
    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : evt.keyCode;
        if (charCode != 46 && charCode > 31
            && (charCode < 48 || charCode > 57))
            return false;
        return true;
    }
</script>
